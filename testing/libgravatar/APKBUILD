# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=libgravatar
pkgver=19.04.3
pkgrel=0
pkgdesc="KDE PIM library providing Gravatar support"
arch="all"
url="https://kontact.kde.org/"
license="LGPL-2.0-or-later"
depends_dev="qt5-qtbase-dev ki18n-dev kconfig-dev kwidgetsaddons-dev ktextwidgets-dev kio-dev pimcommon-dev"
makedepends="$depends_dev extra-cmake-modules"
checkdepends="xvfb-run"
source="https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	CTEST_OUTPUT_ON_FAILURE=TRUE xvfb-run ctest
}

package() {
	DESTDIR="$pkgdir" make install
}
sha512sums="be274c19def96cbadf1d07e1ad04742f6407bd8843e6e2fc88bc6f5b662074af7d39aba25d938d8f6e1216bb8537bc6af621577d5c2bba7894121a52d0fd5de7  libgravatar-19.04.3.tar.xz"
